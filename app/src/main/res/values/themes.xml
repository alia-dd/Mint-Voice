<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Langep" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App Colors -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Spinner dropdown background -->
        <item name="android:popupBackground">@color/mint</item>

        <!-- Optional: Remove ripple and outline (flat look) -->
        <item name="android:spinnerStyle">@style/CustomSpinnerStyle</item>
    </style>

    <!-- Custom spinner style to override ripple/etc. -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/mint</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
